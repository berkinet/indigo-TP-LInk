<?xml version="1.0"?>
<!-- If your plugin wants to add menu items to it's submenu off the new Extensions menu,
	 define them here. Each should have a unique menu id, a Name, and an Action. The last
	 is a method name in your python file that will be called when the user selects that
	 menu item. Note - nothing will be returned to the client, so if you need to communicate
	 back to the user you can post information into the Event Log.
-->
<MenuItems>
	<MenuItem id="toggleDebug">
		<Name>Toggle Debugging</Name>
        <CallbackMethod>toggleDebugging</CallbackMethod>
	</MenuItem>
	<MenuItem id="dumpDeviceInfo">
		<Name>Display device information</Name>
        <CallbackMethod>dumpDeviceInfo</CallbackMethod>
		 <ButtonTitle>Done</ButtonTitle>
		<ConfigUI>
			<Field id="targetDevice" type="menu" defaultValue="">
				<Label>Select the plug device:</Label>
				<List class="indigo.devices" filter="self"/>
			</Field>
			<Field id='displayOk' type='checkbox' hidden="true" defaultValue="false" />
			<Field id="multiPlug" type="checkbox" readonly='YES' visibleBindingId="displayOk"  visibleBindingValue="true" >
				<Label>2 or more outlets:</Label>
			</Field>
			<Field id="address" type="textfield" readonly='YES' visibleBindingId="displayOk"  visibleBindingValue="true" >
				<Label>IP Address:</Label>
			</Field>
			<Field id="outletNum" type="textfield" readonly='YES' visibleBindingId="displayOk"  visibleBindingValue="true" >
				<Label>Outlet number:</Label>
			</Field>
			<Field id="energyCapable" type="checkbox" readonly='YES' visibleBindingId="displayOk"  visibleBindingValue="true" >
				<Label>Energy <datagrid></datagrid>:</Label>
			</Field>
			<Field id="deviceId" type="textfield" readonly='YES' visibleBindingId="displayOk"  visibleBindingValue="true" >
				<Label>Device ID:</Label>
			</Field>
			<Field id="alias" type="textfield" readonly='YES' visibleBindingId="displayOk"  visibleBindingValue="true" >
				<Label>alias:</Label>
			</Field>
			<Field id="devPoll" type="checkbox" readonly='YES' visibleBindingId="displayOk"  visibleBindingValue="true" >
				<Label>Polling enabled:</Label>
			</Field>
			<Field id="onPoll" type="textfield" readonly='YES' visibleBindingId="displayOk"  visibleBindingValue="true" >
				<Label>Polling interval when device is On</Label>
			</Field>
			<Field id="offPoll" type="textfield" readonly='YES' visibleBindingId="displayOk"  visibleBindingValue="true" >
				<Label>Polling interval when device is Off</Label>
			</Field>
			<Field id="actionButton" 
					type="button" 
					tooltip="Click this button to display device information" 
					visibleBindingId="displayOk" 
					visibleBindingValue="false">
				<!-- <Label>Visible button's label:</Label> -->
				<Title>Display Device Date</Title>
				<CallbackMethod>displayButtonPressed</CallbackMethod>
			</Field>
			<Field id="printButton" 
					type="button" 
					tooltip="Click this button to print device information to the log" 
					visibleBindingId="displayOk" 
					visibleBindingValue="true">
				<!-- <Label>Visible button's label:</Label> -->
				<Title>Print to log</Title>
				<CallbackMethod>printToLogPressed</CallbackMethod>
			</Field>
        </ConfigUI>
	</MenuItem>
</MenuItems>